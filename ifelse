#!/bin/bash

# Конструкция if-elif-else
# Синтаксис
# if условие1 ; then
# <команды для условия 1>
# elif условие2 ; then
# <команды для условия 2>
# else
# <команды для остальных случаев>
# fi

# Пример

read -p "Введите число: " num

if [ $num -gt 0 ]; then
    echo "Число положительное"
elif [ $num -lt 0 ]; then
    echo "Число отрицательное"
else
    echo "Число равно нулю"
fi

# Конструкция case
# Синтаксис
#case переменная in
#    шаблон1) <команды для шаблона 1> ;;
#    шаблон2) <команды для шаблона 2> ;;
#    *) команды по умолчанию ;;
#esac
# Пример использования есть в ./function
